<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#A6E3E9"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEARCH EMPLOYEE\n"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Employee Code :"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/searchecode"
        android:inputType="number"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:id="@+id/searchybtn"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="18dp"
        android:fontFamily="serif-monospace"
        android:background="#45C6CE"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="search"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:id="@+id/tomenufromsearch"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="18dp"
        android:fontFamily="serif-monospace"
        android:background="#71C9CE"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Back to menu"/>
</LinearLayout>